@using System.Data
@using System.Linq
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Html.Raw(ViewBag.Title ?? "WePay Admin Panel")</title>
    @Styles.Render("~/UI/DesignCss")
    @Scripts.Render("~/UI/CoreJs")
