@model ewallet.application.Models.DistributorManagementRolesModel

@{
    ViewBag.Title = "AssignRole";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@{
    var BreadCum = ewallet.application.Library.ApplicationUtilities.GenerateBreadcum("Distributor", "Assign Role");
}
@section BreadCum{
    @Html.Raw(BreadCum)}
<div class="card">
    <div class="card-body">
        @using (Html.BeginForm("AssignRole", "DistributorManagement", new { }, FormMethod.Post, new { @role = "form", @id = "RetrieveTransfer" }))
        {
            string check = null;
            if (Model.IsPrimary != null && Model.IsPrimary.Trim() == "y")
            {
                check = "checked";
            }
            @Html.AntiForgeryToken()
            @Html.HiddenFor(c => c.AgentId)
            @Html.HiddenFor(c => c.UserId)
            <fieldset class="mb-6">
                @if (1 == 2)
                {
                <div class="row">
                    <div class="col-md-12">
                        @*@Html.NTextBoxFor(model => model.UserName, new { @class = "form-control", autocomplete = "off" }, 3)*@
                        @Html.NDropDownListFor(model => model.RoleId, new SelectList(ViewBag.usertype, "Value", "Text"), new { @class = "form-control ", @autocomplete = "off" }, 3)
                       

                        @*@Html.NDropDownListFor(model => model.isPrimary, new SelectList(Model.isPrimary, "Value", "Text"), new { @class = "form-control ", @autocomplete = "off" }, 3)*@
                    </div>
                </div>
                }
                <div class="row">
                    <div class="col-md-4">
                        @Html.LabelFor(model => model.IsPrimary, "Is Primary", new { @class = "label", autocomplete = "off" })
                        <div class="form-check form-check-switchery form-check-switchery-double">
                            <label class="form-check-label">
                                No
                                <input type="checkbox" class="form-input-switchery" data-fouc data-switchery="true" @Html.Raw(check) style="display: none;" id="IsPrimary" name="IsPrimary" />
                                Yes
                            </label>
                        </div>
                        <br />
                        <br />
                    </div>



                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <button type="submit" class="btn btn-success btn-sm" id="btnSubmit">Submit <i class="icon-floppy-disk ml-2"></i></button>
                    </div>

                </div>

            </fieldset>
        }
    </div>
</div>

<script>

    $('#checkbox').change(function (e) {
        /*debugger*/;
        if ($('#checkbox').is(":checked")) {
            $('#UserStatus').val('Yes');

        } else {

            $('#UserStatus').val('No');
        }
    });

    $('#checkbox').ready(function (e) {
        /*debugger*/;
        if ($('#checkbox').is(":checked")) {
            $('#UserStatus').val('Yes');

        } else {

            $('#UserStatus').val('No');
        }
    });
</script>

