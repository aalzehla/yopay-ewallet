
@{
    ViewBag.Title = "Privilege";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@{var BreadCum = ewallet.application.Library.ApplicationUtilities.GenerateBreadcum("Role", "Assign Privilege", "");}
@section BreadCum{
    @Html.Raw(BreadCum)
}
    <div class="card">
        <div class="card-header header-elements-inline">
            <h5 class="card-title">Assign Privilege</h5>
        </div>
        <div class="card-body">
            @Html.AntiForgeryToken()
            @using (Html.BeginForm("Privilege", "Role", new { }, FormMethod.Post, new { @role = "form", @id = "assignprivilege", @class = "form-validate-jquery" }))
            {
            <div class="row">
                @Html.AntiForgeryToken()
                @Html.Hidden("RoleID", ViewData["RoleID"])
                  @Html.NCheckBoxGroupFor("RoleList", ViewData["RoleList"] as IEnumerable<SelectListItem>, 1)
                        <div class="col-lg-12">
                            <button type="submit" class="btn btn-success btn-sm"><i class="icon-floppy-disk mr-2"></i> Save</button>
                        </div>
                    </div>
                }
            </div>
        </div>

