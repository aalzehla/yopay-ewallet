@model ewallet.shared.Models.UserCommon


@{
    ViewBag.Title = "changepassword";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



@{var BreadCum = ewallet.application.Library.ApplicationUtilities.GenerateBreadcum("Change Password", "");}
@section BreadCum{
    <style>
        .pull-right {
            float: right;
            margin-left: auto;
        }
    </style>
    @Html.Raw(BreadCum)
}

<div class="card">
    <div class="card-header header-elements-inline">
        <legend class="card-title text-uppercase font-size-sm font-weight-bold"> Change Password</legend>
    </div>
    <div class="card-body">
        @using (Html.BeginForm("changepassword", "user", FormMethod.Post, new { @role = "form", @id = "change password", enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <fieldset class="mb-3">
                <div class="row">
                    @Html.NTextBoxFor(model => model.OldPassword, new { @class = "form-control", autocomplete = "off", @type = "password" }, 3)
                </div>
                <div class="row">
                    @Html.NTextBoxFor(model => model.UserPwd, new { @class = "form-control", autocomplete = "off", @type = "password" }, 3)
                </div>
                <div class="row">
                    @Html.NTextBoxFor(model => model.ConfirmUserPwd, new { @class = "form-control", autocomplete = "off", @type = "password" }, 3)
                </div>
                <br />
                <div class="row">
                    <div class="col-lg-12">
                        <button type="submit" class="btn btn-success btn-sm">Save <i class="icon-floppy-disk ml-2"></i></button>
                        <button class="btn btn-default" onclick="cancel()">Cancel <i class="icon-cross2  ml-2"></i></button>
                    </div>
                  
                </div>
            </fieldset>
        }
    </div>
</div>
<script>
    function cancel() {
        window.location.href="/admin/"
    }

</script>
